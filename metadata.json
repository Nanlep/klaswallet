{
  "name": "KlasWallet",
  "short_name": "KlasWallet",
  "version": "1.1.0",
  "bundle_id": "com.klaswallet.enterprise",
  "description": "Enterprise-grade crypto-fiat terminal for the African market. Licensed Virtual Asset Service Provider (VASP) enabling institutional liquidity and merchant settlements.",
  "privacy_policy_url": "https://klaswallet.com/privacy",
  "support_email": "ops@klaswallet.com",
  "requestFramePermissions": [
    "camera",
    "microphone",
    "geolocation"
  ],
  "nativeFeatures": {
    "biometrics": "BiometricPrompt API for transaction signing",
    "secureStorage": "Hardware-backed keystore for private key isolation",
    "haptics": "Tactile confirmation for ledger entries",
    "pushNotifications": "FCM for real-time deposit alerts"
  },
  "compliance": {
    "vasp_license": "NG-VASP-2024-429-A",
    "jurisdiction": "Nigeria / Pan-African",
    "aml_provider": "SmileID",
    "fiat_gateway": "Bani.africa"
  },
  "googlePlayCompliance": {
    "category": "Finance",
    "financialFeatures": [
      "Digital Wallet",
      "Currency Exchange",
      "Payments"
    ],
    "dataSafety": {
      "collected": [
        "Location",
        "Personal Info",
        "Financial Info",
        "App Activity"
      ],
      "shared": [
        "SmileID (ID Verification)",
        "Bani.africa (Payment Processing)"
      ],
      "security": [
        "Data encrypted in transit",
        "Account deletion supported"
      ]
    }
  }
}